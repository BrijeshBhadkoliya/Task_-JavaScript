        const pi = 3.14;
        let R_value = Number(prompt("Enter Your R Value :-"))
        let ans;

        ans = pi * R_value * R_value;
        document.write("plzz wait and get your amswer...")
        setTimeout(() => { document.write(`<big><b><big><b>Your Area of cricle is ${ans}`) }, 1000);


