<body>
    <script>
        let salry = Number(prompt("Enter Your Monthly Salry"))
        let HRS = salry * 10 / 100
        let DA = salry * 5 / 100
        let TA = salry * 8 / 100

        let main = salry + HRS + DA + TA
        
        document.write(`<Big>Your gross salary is  <b> ${main}`)

    </script>
</body>

