<body>
    <script>

        let principle = Number(prompt("Enter Your Principle Value :-"))
        let rate = Number(prompt("Enter Your Rate Value :-"))
        let n = Number(prompt("Enter Your N Value :-"))
        let ans;

        ans = principle * rate * n / 100;
        document.write("plzz wait and get your amswer...")
        setTimeout(() => { document.write(`<big><b><big><b>Your Rate of Interest is ${ans}`) }, 1000);


    </script>
